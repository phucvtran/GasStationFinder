<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/camaro"
    android:layout_gravity="center_horizontal"

    tools:context="group5.tcss450.uw.edu.outofgas.ForgotPasswordActivity">

    <Button
        android:text="@string/recievePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:id="@+id/receivePasswordButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:gravity="center"
        android:ems="10"
        android:layout_marginTop="27dp"
        android:id="@+id/forgotNameText"
        android:hint="First Name + Last Name"
        android:background="@color/wallet_dim_foreground_inverse_disabled_holo_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="39dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/wallet_dim_foreground_inverse_disabled_holo_dark"
        android:id="@+id/forgotUsernameText"
        android:hint="Username"
        android:layout_below="@+id/forgotNameText"
        android:layout_alignLeft="@+id/forgotNameText"
        android:layout_alignStart="@+id/forgotNameText" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/wallet_dim_foreground_inverse_disabled_holo_dark"
        android:id="@+id/forgotEmailText"
        android:hint="Email Address"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/forgotUsernameText"
        android:layout_alignLeft="@+id/forgotUsernameText"
        android:layout_alignStart="@+id/forgotUsernameText" />

    <ProgressBar
        android:id="@+id/progressBarForgotPassword"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/receivePasswordButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
