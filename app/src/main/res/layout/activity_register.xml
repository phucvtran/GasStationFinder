<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/camaro"
    tools:context="group5.tcss450.uw.edu.outofgas.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <EditText
            android:layout_width="350dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordReg"
            android:hint="Password"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/wallet_dim_foreground_inverse_disabled_holo_dark"
            android:layout_below="@+id/usernameReg"
            android:layout_marginTop="24dp"
            android:layout_height="28dp" />

        <EditText
            android:layout_width="350dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/emailReg"
            android:hint="Email Address"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/wallet_dim_foreground_inverse_disabled_holo_dark"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/confirmPasswordReg"
            android:layout_height="28dp" />

        <CheckBox
            android:text="Show Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showPasswordCheckBox"
            android:layout_below="@+id/passwordReg" />

        <EditText
            android:layout_width="350dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confirmPasswordReg"
            android:hint="Confirm Password"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/wallet_dim_foreground_inverse_disabled_holo_dark"
            android:layout_height="28dp"
            android:layout_below="@+id/showPasswordCheckBox"/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="28dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usernameReg"
            android:hint="Username"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/wallet_dim_foreground_inverse_disabled_holo_dark"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/fullNameText" />

        <EditText
            android:layout_width="350dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/fullNameText"
            android:hint="First Name + Last Name"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/wallet_dim_foreground_inverse_disabled_holo_dark"
            android:layout_height="28dp"
            android:layout_marginTop="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/usernameReg"
            android:layout_alignStart="@+id/usernameReg" />

        <Button
            android:text="@string/registerAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createAccountButton"
            android:layout_marginTop="21dp"
            android:background="@drawable/my_button"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/emailReg"
            android:layout_toRightOf="@+id/showPasswordCheckBox"
            android:layout_toEndOf="@+id/showPasswordCheckBox" />

        <ProgressBar
            android:id="@+id/progressBarRegister"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/createAccountButton"
            android:layout_alignStart="@+id/createAccountButton" />

    </RelativeLayout>

</FrameLayout>
